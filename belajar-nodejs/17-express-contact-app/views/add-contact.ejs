<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h2>Form Tambah Data Contact</h2>

      <% if (typeof errors != 'undifined') { %>
      <tr>
        <td colspan="4">
          <div class="alert alert-danger fw-bold" role="alert">Error.</div>
        </td>
      </tr>
      <% } %>

      <form method="POST" action="/contact">
        <div class="mb-3">
          <label for="nama" class="form-label">Nama</label>
          <input
            type="text"
            class="form-control"
            id="nama"
            name="nama"
            required
          />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            required
          />
        </div>
        <div class="mb-3">
          <label for="NoHandphone" class="form-label">No Handphone</label>
          <input
            type="text"
            class="form-control"
            id="NoHandphone"
            name="NoHandphone"
            required
          />
        </div>
        <button type="submit" class="btn btn-primary">
          Tambahkan Data Contact
        </button>
      </form>
    </div>
  </div>
</div>
